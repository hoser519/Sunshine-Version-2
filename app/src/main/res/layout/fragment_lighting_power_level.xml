<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sunshine.app.LightingPowerLevel">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:autoText="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="Channel 0"
                android:textSize="36sp"
                android:typeface="normal"
                tools:fontFamily="serif" />

            <SeekBar
                android:id="@+id/ch0PwrSeekbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="0.8"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:rotation="270" />

            <EditText
                android:id="@+id/ch0_percent_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:backgroundTint="?android:attr/colorControlHighlight"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Name"
                android:textSize="36sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:autoText="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="Channel"
                android:textSize="36sp"
                android:typeface="normal"
                tools:fontFamily="serif" />

            <SeekBar
                android:id="@+id/ch1_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight=".8"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:rotation="270" />

            <EditText
                android:id="@+id/ch1_percent_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Name"
                android:textSize="36sp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
